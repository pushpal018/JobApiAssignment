<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Navigation_View_Theme">
    <item name="android:textSize">@dimen/menu_title_text_size</item>
    <item name="android:titleMarginTop">8dp</item>
    </style>

    <style name="regular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="large_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/largeText</item>
    </style>


    <style name="custom_button">
        <item name="materialButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:fontWeight" tools:ignore="NewApi">300</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:paddingStart">@dimen/largeMargin</item>
        <item name="android:paddingEnd">@dimen/largeMargin</item>
        <item name="android:drawablePadding">@dimen/mediumMargin</item>
    </style>


    <style name="password_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:fontWeight" tools:ignore="NewApi">300</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:paddingEnd">@dimen/largeMargin</item>
        <item name="android:drawablePadding">@dimen/mediumMargin</item>
    </style>

    <style name="horizontal_divider_profile">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color_profile</item>
    </style>



</resources>
